<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="triangle" class="org.javabrains.Triangle" autowire="byName" init-method="myInit" destroy-method="myDestroy">
    </bean>

    <bean id="pointA" class="org.javabrains.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>
    <bean id="pointB" class="org.javabrains.Point">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>
    <bean id="pointC" class="org.javabrains.Point">
        <property name="x" value="0"/>
        <property name="y" value="20"/>
    </bean>

    <alias name="triangle" alias="triangle-alias"/>

</beans>